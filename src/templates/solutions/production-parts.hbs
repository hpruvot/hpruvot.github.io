{{#> ./../partials/html-header }}{{/./../partials/html-header}}

<body class="page page--solution page--solution2">

  {{#> ./../partials/header}}{{/./../partials/header}}

  {{#> ./../partials/breadcrumb 
    parentUrl="our-solutions" 
    parentPage="Our Engineered Solutions" 
    currentPage=title
  }}
  {{/./../partials/breadcrumb}}

  <div class="section section--intro">
    <div class="mcam-layout-section__inner">
      <div class="section-article">
        <div class="section-article__head">
          <h1 class="section-article__title mcam-headline-1">{{ title }}</h1>
          <p class="section-article__description mcam-body-text">{{ metaDescription }}</p>
        </div>
      </div>
    </div>
  </div>

  <div class="section section--content">
    <div class="mcam-layout-section__inner">
      <div class="section-article__content section-article__content--left">
        <div class="section-article__images">
          <img src="/img/solutions/2-image-1.jpg" alt="">
        </div>
