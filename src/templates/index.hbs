
{{#> partials/html-header }}{{/partials/html-header}}

<body class="mcam-page mcam-page--home">

  {{#> partials/header home=true clientStories=false ourApplications=false ourSolutions=false}}{{/partials/header}}

  <div class="mcam-layout-section mcam-layout-section--keynumbers">
    <div class="section-keynumbers">
      <picture class="section-keynumbers__background">
        <img data-src="/img/key_numbers.jpg" class="lazy" alt="Key numbers">
      </picture>
      <div class="section-keynumbers__content">
        <div class="mcam-layout-section__inner">
          <p class="section-keynumbers__title mcam-headline-1">Our advanced Engineered Polymer solutions<br>out perform Metal in extreme environments</p>
          <div class="section-keynumbers__items">
            <div class="section-keynumbers__item">
              <a href="/client-stories/{{ clientStories.0.url }}.html">
                <span class="section-keynumbers__item-number mcam-key" data-aos="fade-down" data-aos-delay="0"
                  data-aos-easing="easeInOutExpo" data-aos-duration="600" data-aos-once="true">2-3x</span>
                <p class="section-keynumbers__item-text" data-aos="fade-up" data-aos-delay="0"
                  data-aos-easing="easeInOutExpo" data-aos-duration="600" data-aos-once="true">longer mean time<br>between
                  repairs</p>
              </a>
            </div>
            <div class="section-keynumbers__item">
              <a href="/client-stories/{{ clientStories.1.url }}.html">
                <span class="section-keynumbers__item-number mcam-key" data-aos="fade-down" data-aos-delay="200"
                  data-aos-easing="easeInOutExpo" data-aos-duration="600" data-aos-once="true">Up to 50%</span>
                <p class="section-keynumbers__item-text" data-aos="fade-up" data-aos-delay="200"
                  data-aos-easing="easeInOutExpo" data-aos-duration="600" data-aos-once="true">less clearance than API approved<br>metal</p>
              </a>
            </div>
            <div class="section-keynumbers__item">
              <a href="/client-stories/{{ clientStories.2.url }}.html">
                <span class="section-keynumbers__item-number mcam-key" data-aos="fade-down" data-aos-delay="400"
                  data-aos-easing="easeInOutExpo" data-aos-duration="600" data-aos-once="true">5 - 10%</span>
                <p class="section-keynumbers__item-text" data-aos="fade-up" data-aos-delay="400"
                  data-aos-easing="easeInOutExpo" data-aos-duration="600" data-aos-once="true">Cost savings in Upstream Integrity<br>management systems</p>
              </a>
            </div>
          </div>
          <a href="/our-solutions.html" class="mcam-cta">
            <span class="mcam-cta__link">Discover our solutions</span>
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <div class="mcam-layout-section mcam-layout-section--certif">
    <div class="mcam-block-certif">
      <div class="mcam-layout-section__inner">
        <div class="mcam-block-certif__column mcam-block-certif__column--left">
          <p class="mcam-block-certif__text">Mitsubishi Chemical Advanced Materials is a leading global manufacturer of high-performance thermoplastic materials in
          the form of semi-finished products and finished parts.</p>
        </div>
        <div class="mcam-block-certif__column mcam-block-certif__column--right">
          <div class="mcam-block-certif__logos">
            <img data-src="/img/logo1.png" width="115" class="lazy" alt="NORSOK M-710">
            <img data-src="/img/logo2.png" width="115" class="lazy" alt="PASSED">
          </div>
          <p class="mcam-block-certif__text">Mitsubishi Chemical Advanced Materials was the worldâ€™s FIRST to earn NORSOK M-710 compliance and provides the most
          accurate and reliable data on their stock shapes.</p>
        </div>
      </div>
    </div>
  </div>

  <div class="section section--applications">
    <div class="mcam-layout-section__inner">  
      <div class="section-applications">
        <p class="section-applications__title mcam-headline-2">Our materials support cutting edge Oil & Gas applications</p>
        {{#each ourApplications}}
        <div class="card-application">
          <a href="/our-applications/{{ url }}.html">
            <picture class="card-application__picture">
              <img src="/img/{{ img }}.jpg" alt="">
            </picture>
            <div class="card-application__content">
              <p class="card-application__title">{{ thumbnailTitle }}</p>
              <p class="card-application__description">{{ thumbnailDescription }}</p>
              <p class="card-application__icon mcam-cta-icon">
                <svg class="icon icon-arrow">
                  <use xlink:href="/symbol-defs.svg#icon-arrow"></use>
                </svg>
                <span class="mcam-cta-icon__link">Learn why</span>
              </p>
            </div>
          </a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="section section--solutions">
    <div class="mcam-layout-section__inner">
      <div class="section-solutions">
        <p class="section-solutions__title mcam-headline-2">We provide the most comprehensive range<br>of engineering solutions for Oil & Gas</p>
        {{#each ourSolutions}}
        <div class="card-solution">
          <a href="/our-solutions/{{ url }}.html">
            <picture class="card-solution__picture">
              <img src="/img/{{ img }}.jpg" alt="">
            </picture>
            <div class="card-solution__content">
              <p class="card-solution__title">{{ thumbnailTitle }}</p>
              <ul class="card-solution__tick">
                {{#each thumbnailDescription}}
                <li>
                  <svg class="icon icon-check">
                    <use xlink:href="/symbol-defs.svg#icon-check"></use>
                  </svg>
                  {{item}}
                </li>
                {{/each}}
              </ul>
              <p class="card-solution__icon mcam-cta-icon mcam-cta-icon--white">
                <svg class="mcam-cta-icon__icon icon icon-arrow">
                  <use xlink:href="/symbol-defs.svg#icon-arrow"></use>
                </svg>
                <span class="mcam-cta-icon__link">Discover more</span>
              </p>
            </div>
          </a>
        </div>
        {{/each}}
        <a href="/our-solutions.html" class="mcam-cta">
          <span class="mcam-cta__link">Discover our RANGE OF ENGINEERING solutions</span>
        </a>
      </div>
    </div>
  </div>

  {{#> partials/whitepaper}}{{/partials/whitepaper}}

  <div class="mcam-block-whitepaper" data-aos="fade-left" data-aos-delay="0" data-aos-easing="easeInOutExpo" data-aos-duration="600" data-aos-once="true">
    <div class="mcam-block-whitepaper__left">
      <picture class="mcam-block-whitepaper__picture">
        <source data-srcset="/img/whitepaper-mobile.png" media="(max-width: 767px)">
        <img data-src="/img/whitepaper-desktop.png" class="lazy" alt="white paper" />
      </picture>
    </div>
    <div class="mcam-block-whitepaper__right">
      <p class="mcam-block-whitepaper__title mcam-headline-2">Learn more about the effects of processing methods on thermoplastics</p>
      <a href="/white-paper.html" class="mcam-cta-icon">
        <svg class="icon icon-download">
          <use xlink:href="/symbol-defs.svg#icon-download"></use>
        </svg>
        <span class="mcam-cta-icon__link">Download our whitepaper</span>
      </a>
    </div>
    <div class="mcam-block-whitepaper__close">
      <svg class="icon icon-cross">
        <use xlink:href="/symbol-defs.svg#icon-cross"></use>
      </svg>
    </div>
  </div>

  {{#> partials/newsletter}}{{/partials/newsletter}}

  <div class="section section--getintouch">
    {{#> partials/get-in-touch}}{{/partials/get-in-touch}}
  </div>

  {{#> partials/footer}}{{/partials/footer}}
  
</body>
</html>